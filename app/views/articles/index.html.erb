<h1>Articles list:</h1>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each_with_index do |article, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to "Show", article_path(article) %></td>
      <td><%= link_to "Edit", article_path(article) %></td>
      <td><%= button_to "Delete", article_path(article), method: :delete %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create a new article", new_article_path%>

<div class="row container mb-5 py-5 border-bottom d-flex align-items-center">
  <%# column 1 %>
  <div class="col-12 col-md-7 p-3">
    <div class="col-12 d-flex align-items-center">
        <div class="user-img-container"
      style="background-image: url(<%= @user.photo.attached? ? cl_image_path(@user.photo.key) :
      'https://images.unsplash.com/photo-1604076913837-52ab5629fba9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80'%>)">
      </div>
      <div class="user-data">
        <h3>Hi, I am <%= @user.username %></h3>
        <% if @user.articles.any? %>
          <p class="tag">Posts: <%= @user.articles.count %></p>
        <% else %>
          <p>No posts</p>
        <% end %>
        <%= link_to "Edit profile", edit_user_path(@user), class: "btn-small block" %>
      </div>
    </div>
  </div>
  <%# column 2%>
  <div class="col-12 col-md-5">
    <div class="col-12 border-left">
      <div class="p-3">
        <p class="fw-bold">A little bit about me</p>
        <p>I like oceans, writting and coding on my free time! 🌊👩🏼‍💻🖋</p>
      </div>
      <ul class="social-buttons">
        <li><i class="fa fa-brands fa fa-instagram"></i></li>
        <li><i class="fa fa-brands fa fa-twitter"></i></li>
        <li><i class="fa fa-brands fa fa-linkedin"></i></li>
      </ul>
    </div>
  </div>
</div>

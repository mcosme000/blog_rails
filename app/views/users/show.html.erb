<div class="container my-5">
  <%= link_to "Go back to articles", articles_path, class: "btn-small btn-underline" %>

  <div class="row container">

    <div class="user-card col-md-12 col-lg-5 p-0 my-3 align-self-start">
      <div class="p-3">
        <div class="d-flex align-items-center">
          <div class="user-img-container p-1">
            <%= image_tag "profile", class: "rounded-circle w-100" %>
          </div>
          <div class="user-data">
            <h2>〜<%= @user.username %></h2>
            <p>Published posts: <%= @user.articles.count if @user.articles.any? %></p>
          </div>
        </div>
        <hr>
        <p>A little bit about me: I like oceans, writting and coding on my free time! 🌊👩🏼‍💻🖋</p>
      </div>
      <ul class="social-buttons m-0">
      <li><i class="fa fa-brands fa fa-instagram"></i></li>
      <li><i class="fa fa-brands fa fa-twitter"></i></li>
      <li><i class="fa fa-brands fa fa-linkedin"></i></li>
    </ul>
    </div>

    <div class="col-md-12 my-3 col-lg-7 p-0">
      <% if @user.articles.any? %>
        <% @user.articles.each do |article| %>
          <div class="article d-flex flex-column justify-content-between" style="background-color: <%= @colors.sample %>">
            <p>Created on <%= article.created_at.strftime('%m/%d/%Y') %></p>
            <img src="" alt="">
            <div class="article-content">
              <h3><%= article.title %></h3>
            </div>
            <%= link_to "Read more", article_path(article), class: "btn-small btn-underline"%>
          </div>
        <% end %>
      <% else %>
        <p>Sorry, the user <%= @user.username %> still has no posts!</p>
      <% end %>
    </div>

  </div>
</div>
